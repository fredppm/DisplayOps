{
  "name": "displayops-controller-electron",
  "version": "1.0.2",
  "description": "DisplayOps Web Controller - Electron wrapper with embedded Next.js server",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently --names \"TSC,ELECTRON\" --prefix-colors \"magenta,cyan\" \"npm run dev:tsc\" \"npm run dev:electron\"",
    "dev:tsc": "tsc --watch --preserveWatchOutput",
    "dev:electron": "wait-on dist/main.js && cross-env NODE_ENV=development electron .",
    "build": "tsc && npm run build:web-controller",
    "build:web-controller": "cd ../web-controller && npm run build",
    "start": "electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "build": {
    "appId": "com.displayops.controller",
    "productName": "DisplayOps Controller",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "../web-controller/.next/**/*",
      "../web-controller/package.json",
      "../web-controller/next.config.js",
      "../web-controller/node_modules/**/*",
      "!../web-controller/node_modules/.bin/**/*"
    ],
    "extraResources": [
      {
        "from": "../web-controller",
        "to": "web-controller",
        "filter": [
          "!node_modules",
          "!.next/cache",
          "!.git"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "menuCategory": "DisplayOps",
      "uninstallDisplayName": "DisplayOps Controller"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.business"
    },
    "dmg": {
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Office"
    },
    "publish": {
      "provider": "generic",
      "url": "https://displayops.vtex.com/api/updates/controller"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/displayops-team/office-tv.git"
  },
  "keywords": [
    "displayops",
    "electron",
    "nextjs",
    "display-management",
    "office-automation"
  ],
  "author": "DisplayOps Management System",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/auto-launch": "^5.0.5",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "sharp": "^0.34.3",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "electron-log": "^5.0.1",
    "electron-updater": "^6.1.7"
  }
}
