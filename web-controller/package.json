{
  "name": "displayops-web-controller",
  "version": "1.0.5",
  "description": "DisplayOps Web Controller - Next.js web interface with optional Electron desktop app",
  "main": "electron/dist/main.js",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:electron": "concurrently --names \"TSC,ELECTRON\" --prefix-colors \"magenta,cyan\" \"npm run dev:electron-tsc\" \"npm run dev:electron-start\"",
    "dev:electron-tsc": "tsc --project electron/tsconfig.json --watch --preserveWatchOutput",
    "dev:electron-start": "wait-on electron/dist/main.js && cross-env NODE_ENV=development electron .",
    "build": "next build",
    "build:electron": "tsc --project electron/tsconfig.json && npm run build",
    "start": "next start",
    "start:electron": "electron .",
    "pack": "npm run build:electron && electron-builder --dir",
    "dist": "npm run build:electron && electron-builder",
    "dist:win": "npm run build:electron && electron-builder --win",
    "dist:mac": "npm run build:electron && electron-builder --mac",
    "dist:linux": "npm run build:electron && electron-builder --linux",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:electron": "eslint electron --ext .ts",
    "lint:electron:fix": "eslint electron --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "type-check:electron": "tsc --project electron/tsconfig.json --noEmit"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.10.1",
    "@grpc/proto-loader": "^0.7.10",
    "@types/bonjour": "^3.5.13",
    "archiver": "^6.0.1",
    "auto-launch": "^5.0.6",
    "axios": "^1.6.2",
    "bonjour": "^3.5.0",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "electron-log": "^5.0.1",
    "electron-updater": "^6.1.7",
    "lucide-react": "^0.294.0",
    "next": "^14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io-client": "^4.8.1",
    "tailwindcss": "^3.3.6",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/auto-launch": "^5.0.5",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "28.1.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "postcss": "^8.4.32",
    "sharp": "^0.34.3",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.displayops.controller",
    "productName": "DisplayOps Controller",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "icon": "assets/icon.png",
    "files": [
      "electron/dist/**/*",
      ".next/**/*",
      "package.json",
      "next.config.js",
      "server.js",
      "public/**/*",
      "assets/**/*",
      "!node_modules/.bin/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "menuCategory": "DisplayOps",
      "uninstallDisplayName": "DisplayOps Controller"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.business"
    },
    "dmg": {
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Office"
    },
    "publish": {
      "provider": "generic",
      "url": "https://displayops.vtex.com/api/updates/controller"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/displayops-team/office-tv.git"
  },
  "keywords": [
    "displayops",
    "electron",
    "nextjs",
    "display-management",
    "office-automation",
    "mdns-discovery",
    "dashboard-control"
  ],
  "author": "DisplayOps Management System",
  "license": "UNLICENSED"
}
