# Office TV Web Controller Environment Variables

# Development Configuration
# Set to 'true' to include localhost (127.0.0.1) in discovery scanning
# Useful for development when running host-agent locally
OFFICE_TV_INCLUDE_LOCALHOST=false

# Production Configuration
# In production, mDNS discovery will automatically find Office Display hosts
# No need to set OFFICE_TV_INCLUDE_LOCALHOST unless testing locally

# gRPC Admin Communication
# Enable/disable gRPC client for admin communication
GRPC_ADMIN_ENABLED=true

# Admin server gRPC connection
ADMIN_GRPC_HOST=localhost
ADMIN_GRPC_PORT=50052

# Controller identification
CONTROLLER_ID=
CONTROLLER_LOCATION=
CONTROLLER_SITE_ID=

# Auto-registration settings
CONTROLLER_AUTO_REGISTER=true

# Heartbeat settings
CONTROLLER_HEARTBEAT_INTERVAL=30000
CONTROLLER_RECONNECT_DELAY=5000

# Controller web admin URL (for registration)
CONTROLLER_WEB_ADMIN_URL=http://localhost:3001

# Legacy HTTP registration (fallback)
ADMIN_REGISTER_URL=http://localhost:3000

# Logging Configuration
# Main log level: silent, error, warn, info, debug
LOG_LEVEL=debug

# Context-specific logging controls
# Set to false to disable completely, or set specific level
LOG_DISCOVERY=true
LOG_DISCOVERY_LEVEL=debug
LOG_GRPC_LEVEL=debug
LOG_AUTO_REGISTER_LEVEL=debug
LOG_AUTO_INIT_LEVEL=debug
LOG_DASHBOARD_MANAGER_LEVEL=debug
LOG_AUTH_MANAGER_LEVEL=debug
LOG_EXTENSION_DROPDOWN_LEVEL=debug

# Example configurations:
# For production (minimal logs):
# LOG_LEVEL=warn
# LOG_DISCOVERY=false
# LOG_AUTO_REGISTER_LEVEL=silent
# 
# For development (verbose):
# LOG_LEVEL=debug
# LOG_DISCOVERY=true
# LOG_GRPC_LEVEL=debug
# 
# For debugging specific issues:
# LOG_LEVEL=info
# LOG_AUTO_REGISTER_LEVEL=debug
# LOG_DISCOVERY_LEVEL=debug