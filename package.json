{
  "name": "office-tv-management-system",
  "version": "1.0.0",
  "description": "Office TV Management System - Complete solution for managing TV displays",
  "private": true,
  "workspaces": [
    "host-agent",
    "web-controller"
  ],
  "scripts": {
    "install:all": "npm install --prefix host-agent && npm install --prefix web-controller",
    "dev": "concurrently --names \"WEB,HOST\" --prefix-colors \"blue,green\" \"npm run dev:web\" \"npm run dev:host\"",
    "dev:web": "cd web-controller && npm run dev",
    "dev:host": "cd host-agent && npm run dev",
    "build": "npm run build:web && npm run build:host",
    "build:web": "cd web-controller && npm run build",
    "build:host": "cd host-agent && npm run build",
    "start": "concurrently --names \"WEB,HOST\" --prefix-colors \"blue,green\" \"npm run start:web\" \"npm run start:host\"",
    "start:web": "cd web-controller && npm run start",
    "start:host": "cd host-agent && npm run start",
    "lint": "npm run lint:web && npm run lint:host",
    "lint:web": "cd web-controller && npm run lint",
    "lint:host": "cd host-agent && npm run lint",
    "clean": "npm run clean:web && npm run clean:host",
    "clean:web": "cd web-controller && rm -rf .next node_modules",
    "clean:host": "cd host-agent && rm -rf dist node_modules",
    "test:communication": "cd scripts && node test-communication.js",
    "test:quick": "cd scripts && node test-quick-validation.js",
    "test:read-only": "cd scripts && node test-read-only.js",
    "test:phase1": "cd scripts && node test-phase1-complete.js",
    "test:phase2": "cd scripts && node test-phase2-features.js",
    "verify:phase1": "cd scripts && node verify-phase1.js",
    "test:all": "npm run test:communication && npm run test:quick && npm run test:phase1",
    "generate:icons": "node scripts/generate-icons.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.3"
  },
  "keywords": [
    "office-tv",
    "management-system",
    "electron",
    "nextjs",
    "tv-control",
    "mdns-discovery"
  ],
  "author": "Office TV Management System"
}
