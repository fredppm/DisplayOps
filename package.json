{
  "name": "displayops-management-system",
  "version": "1.0.0",
  "description": "DisplayOps Management System - Complete solution for managing displays",
  "private": true,
  "workspaces": [
    "host-agent",
    "web-admin"
  ],
  "scripts": {
    "install:all": "npm install --prefix host-agent && npm install --prefix web-admin",
    "dev": "concurrently --names \"ADMIN,HOST\" --prefix-colors \"blue,magenta,green\" \"npm run dev:admin\" \"npm run dev:host\"",
    "dev:admin": "cd web-admin && npm run dev",
    "dev:host": "cd host-agent && npm run dev",
    "build": "npm run build:admin && npm run build:host",
    "build:admin": "cd web-admin && npm run build",
    "build:host": "cd host-agent && npm run build",
    "start": "concurrently --names \"ADMIN,HOST\" --prefix-colors \"blue,magenta,green\" \"npm run start:admin\" \"npm run start:host\"",
    "start:admin": "cd web-admin && npm run start",
    "start:host": "cd host-agent && npm run start",
    "lint": "npm run lint:admin && npm run lint:host",
    "lint:admin": "cd web-admin && npm run lint",
    "lint:host": "cd host-agent && npm run lint",
    "clean": "npm run clean:admin && npm run clean:host",
    "clean:admin": "cd web-admin && rm -rf .next node_modules",
    "clean:host": "cd host-agent && rm -rf dist node_modules",
    "test:communication": "cd scripts && node test-communication.js",
    "test:quick": "cd scripts && node test-quick-validation.js",
    "test:read-only": "cd scripts && node test-read-only.js",
    "generate:icons": "node scripts/generate-icons.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.3"
  },
  "keywords": [
    "displayops",
    "management-system",
    "electron",
    "nextjs",
    "display-control",
    "mdns-discovery"
  ],
  "author": "DisplayOps Management System",
  "dependencies": {
    "multicast-dns": "^7.2.5"
  }
}
