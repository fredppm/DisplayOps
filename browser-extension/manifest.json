{
  "manifest_version": 3,
  "name": "Office Display Credentials Sync",
  "version": "1.0",
  "description": "Automatically sync authentication credentials to Office Display systems",
  
  "permissions": [
    "cookies",
    "activeTab",
    "storage",
    "tabs"
  ],
  
  "host_permissions": [
    "http://localhost:*/*",
    "http://127.0.0.1:*/*",
    "https://*/*",
    "http://*/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Office Display Credentials Sync",
    "default_icon": {
      "16": "icons/icon-idle-16.png",
      "32": "icons/icon-idle-32.png",
      "48": "icons/icon-idle-48.png",
      "128": "icons/icon-idle-128.png"
    }
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  
  "icons": {
    "16": "icons/icon-idle-16.png",
    "32": "icons/icon-idle-32.png", 
    "48": "icons/icon-idle-48.png",
    "128": "icons/icon-idle-128.png"
  }
}