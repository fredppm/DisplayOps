# Office TV Web Admin - Production Environment Variables

# Production Configuration
OFFICE_TV_INCLUDE_LOCALHOST=false

# gRPC Controller-Admin Communication
GRPC_CONTROLLER_ADMIN_ENABLED=true
GRPC_CONTROLLER_ADMIN_PORT=50052

# Admin server configuration
ADMIN_SERVER_HOST=0.0.0.0
ADMIN_SERVER_PORT=3000

# Authentication and security
# Note: Set JWT_SECRET as environment variable in Vercel dashboard
# JWT_SECRET=

# Database Configuration
DATABASE_TYPE=postgres

# PostgreSQL Configuration (production)
# Set these as environment variables in Vercel dashboard
# POSTGRES_HOST=
# POSTGRES_PORT=5432
# POSTGRES_DB=office_tv_admin
# POSTGRES_USER=
# POSTGRES_PASSWORD=

# Logging Configuration - Production optimized
LOG_LEVEL=warn
LOG_HEARTBEAT=false
LOG_DISCOVERY=false
LOG_GRPC_LEVEL=warn
LOG_SYNC_LEVEL=warn
LOG_CONTROLLER_MONITOR_LEVEL=warn

# Node.js environment
NODE_ENV=production