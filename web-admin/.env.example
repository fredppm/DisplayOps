# Office TV Web Admin Environment Variables

# Development Configuration
# Set to 'true' to include localhost (127.0.0.1) in discovery scanning
# Useful for development when running host-agent locally
OFFICE_TV_INCLUDE_LOCALHOST=false

# Production Configuration
# In production, mDNS discovery will automatically find Office Display hosts
# No need to set OFFICE_TV_INCLUDE_LOCALHOST unless testing locally

# gRPC Controller-Admin Communication
# Enable/disable gRPC server for controller communication
GRPC_CONTROLLER_ADMIN_ENABLED=true

# Port for gRPC Controller-Admin server (default: 50052)
GRPC_CONTROLLER_ADMIN_PORT=50052

# Admin server configuration
ADMIN_SERVER_HOST=localhost
ADMIN_SERVER_PORT=3000

# Authentication and security
JWT_SECRET=your-secret-key-here
ADMIN_PASSWORD=admin123

# Database/Storage
# Controllers and sites data will be stored in data/ directory
DATA_DIR=./data