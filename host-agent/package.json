{
  "name": "displayops-host-agent",
  "version": "1.0.0",
  "description": "Host agent for DisplayOps Management System - runs on mini PCs to control displays",
  "main": "dist/host-agent/src/main.js",
  "scripts": {
    "dev": "npm run copy-assets && concurrently --names \"TSC,ELECTRON\" --prefix-colors \"magenta,cyan\" \"npm run dev:tsc\" \"npm run dev:electron\"",
    "dev:tsc": "tsc --watch --preserveWatchOutput",
    "dev:electron": "wait-on dist/host-agent/src/main.js && set NODE_ENV=development && electron .",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "copyfiles -u 1 \"src/preload/*.js\" \"src/renderer/*.html\" dist/host-agent/src/",
    "start": "electron .",
    "start:prod": "npm run build && electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "build": {
    "appId": "com.displayops.host-agent",
    "productName": "DisplayOps Host Agent",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "!node_modules/.bin/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "menuCategory": "DisplayOps",
      "uninstallDisplayName": "DisplayOps Host Agent"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.business"
    },
    "dmg": {
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Office"
    },
    "publish": {
      "provider": "generic",
      "url": "https://displayops.vtex.com/api/updates/host"
    }
  },
  "keywords": [
    "electron",
    "display-management",
    "office-automation",
    "display-control"
  ],
  "author": "DisplayOps Management System",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "electron": "28.1.0",
    "electron-builder": "^24.9.1",
    "electron-reloader": "^1.2.3",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.10.1",
    "@grpc/proto-loader": "^0.7.10",
    "@types/bonjour": "^3.5.13",
    "bonjour": "^3.5.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.1.7"
  }
}
